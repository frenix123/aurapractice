<aura:component>
    <aura:attribute name="Text" type="String" />
    <aura:attribute name="open" type="Boolean" default="false" />

    <div>
        <div class="Tiles cTiles slds-align--absolute-center slds-var-m-around_medium slds-var-p-around_medium" onclick="{!c.Choose}">
            <aura:if isTrue="{! (v.open == true)}">
                {!v.Text}
            </aura:if>
        </div>
    </div>

</aura:component>	
